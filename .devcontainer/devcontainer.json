{
  "name": "blockr",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "mounts": [
    "source=${localWorkspaceFolder}/.library,target=/workspace/.library,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.claude,target=/root/.claude,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/.ssh,target=/root/.ssh,type=bind,consistency=cached"
  ],
  "runArgs": ["--env-file", ".devcontainer/.env"],
  "initializeCommand": "mkdir -p .library .claude .devcontainer/.ssh",
  "postCreateCommand": "mkdir -p /workspace/.library && ln -sf /root/.claude/claude.json /root/.claude.json && ln -sf /workspace/.devcontainer/gitconfig /root/.gitconfig && ln -sf /workspace/.Rprofile /root/.Rprofile && ln -sf /workspace/.lintr /root/.lintr && chmod 700 /root/.ssh && if ls /root/.ssh/id_* 1>/dev/null 2>&1; then chmod 600 /root/.ssh/id_*; fi",
  "forwardPorts": [3838],
  "portsAttributes": {
    "3838": {
      "label": "Shiny App",
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",
        "RDebugger.r-debugger"
      ]
    }
  }
}
